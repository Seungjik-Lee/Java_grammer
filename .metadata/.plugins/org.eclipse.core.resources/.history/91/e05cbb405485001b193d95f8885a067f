package CRUDJAVA;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.SQLException;

//constructor 생성자
public class AtableMain {

	public AtableMain(PreparedStatement pstmt) {
		// try 구문 안에 있는 내용을 실행하다가 에러가 발생하면 catch로 빠진다.
		/*
		 * 1. jar 파일 추가 확인
		 */

		Connection conn = null;
		try {
			Class.forName("oracle.jdbc.driver.OracleDriver");
			// conn = DriverManager.getConnection("jdbc:oracle:thin:@localhost:1521:xe","AI", "1234");
			conn = DriverManager.getConnection("jdbc:oracle:thin:@192.168.0.111:1521:xe", "AI", "1234");

			System.out.println("DB 연결 성공");

			pstmt = conn.prepareStatement(
					"INSERT INTO ATABLE " + "(IDX, NAME, GENDER, REMARK) " + "VALUES " + "('1', '홍길동', '남자', '비고')");
			pstmt.executeUpdate();

		} catch (Exception e) {
			System.out.println("에러 그 클래스 파일 없음");
		} finally {
			try {
				conn.close();
			} catch (SQLException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}

	}

	public static void main(String[] args) {
		new AtableMain();
	}
}

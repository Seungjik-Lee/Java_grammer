					 * rs.getString("deptno")+":"+ rs.getInt("sal"));
					 */
				 stutbl[count]=new STUTBL(rs.getString("name"),rs.getString("gender"),
					 rs.getInt("age"));
			 count++;
			 }
			 
			 for (int i=0;stutbl.length>i;i++)
			 {
				if(stutbl[i] != null)
				{
					stutbl[i].print();
				}
			 }
			 
			 rs.close();
